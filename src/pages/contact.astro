---
import Layout from "~/layouts/Layout.astro";
import "../styles/global.css";
import ContactIconBlock from "../data_files/ContactIconBlock.astro";
const pageTitle: string = `Contact | Lovosis Technology L.L.C U.A.E - Custom Fabrication & Surveillance Solution Provider In Dubai, United Arab Emirates`;
const abtitle: string = "Contact Our Office";
const absubTitle: string =
  "Thank you for your interest in Lovosis Technology L.L.C U.A.E. Please complete the form below to submit your formal inquiry regarding our custom fabrication and surveillance solutions. Our team will respond within one business day. All information will be handled with strict confidentiality.";
const NAME = "Lovosis Technology L.L.C U.A.E";
---

<Layout>
  <div class="max-w-6xl mx-auto px-4">
    <!-- Hero Banner -->
    <section class="relative rounded-2xl mt-6 mb-10 overflow-hidden shadow-2xl min-h-[400px] flex items-stretch bg-gradient-to-br from-indigo-400 to-purple-600">
      <div class="absolute inset-0 z-0">
        <div class="absolute inset-0 bg-[url('https://images.unsplash.com/photo-1551434678-e076c223a692?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1200&q=80')] bg-cover bg-center"></div>
        <div class="absolute inset-0 bg-gradient-to-br from-indigo-600/80 to-purple-800/80"></div>
      </div>
      <div class="relative z-10 grid grid-cols-1 md:grid-cols-2 min-h-[400px] w-full">
        <div class="flex flex-col justify-center px-8 py-12 text-white">
          <h1 class="text-4xl md:text-5xl font-bold mb-4 drop-shadow">Contact Our Office</h1>
          <p class="text-lg mb-6 opacity-90">
            Thank you for your interest in Lovosis Technology L.L.C U.A.E. Please complete the form below to submit your formal inquiry regarding our custom fabrication and surveillance solutions. Our team will respond within one business day. All information will be handled with strict confidentiality.
          </p>
          <div class="flex flex-wrap gap-3 mb-6">
            <div class="flex items-center gap-2 bg-white/20 backdrop-blur px-4 py-2 rounded-full text-sm">
              <svg width="16" height="16" viewBox="0 0 20 20" fill="currentColor" class="text-white">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              Professional Support
            </div>
            <div class="flex items-center gap-2 bg-white/20 backdrop-blur px-4 py-2 rounded-full text-sm">
              <svg width="16" height="16" viewBox="0 0 20 20" fill="currentColor" class="text-white">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
              </svg>
              Complimentary Consultation
            </div>
          </div>
          <a href="#contact-form" class="inline-block bg-white/20 backdrop-blur px-8 py-3 rounded-lg border border-white/30 font-semibold text-white hover:bg-white/30 transition-all duration-200">Submit an Inquiry</a>
        </div>
        <div class="hidden md:block"></div>
      </div>
    </section>

    <!-- Main Content -->
    <section class="grid grid-cols-1 lg:grid-cols-[1fr_400px] gap-10 mb-16">
      <!-- Contact Form -->
      <div class="bg-white/90 backdrop-blur-lg rounded-2xl shadow-xl p-8 relative overflow-hidden" id="contact-form">
        <div class="absolute top-0 left-0 right-0 h-1.5 bg-gradient-to-r from-indigo-400 to-purple-600 rounded-t-2xl"></div>
        <div class="mb-8">
          <h2 class="text-2xl font-bold text-slate-800 mb-2">Formal Inquiry Form</h2>
          <p class="text-slate-500">Kindly provide your details and a member of our team will contact you promptly. Fields marked with an asterisk (*) are required.</p>
        </div>
        <div id="success-message" class="hidden mb-4 px-4 py-3 rounded-lg bg-green-100 border border-green-300 text-green-800 font-medium"></div>
        <div id="error-message" class="hidden mb-4 px-4 py-3 rounded-lg bg-red-100 border border-red-300 text-red-800 font-medium"></div>
        <form>
          <div class="grid md:grid-cols-2 gap-5">
            <div>
              <label class="block mb-2 font-semibold text-slate-700" for="firstName">First Name *</label>
              <div class="relative">
                <svg class="absolute left-4 top-1/2 -translate-y-1/2 text-slate-400 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
                <input type="text" id="firstName" name="firstName" class="w-full pl-12 pr-4 py-3 rounded-lg border-2 border-slate-200 bg-white/80 focus:border-indigo-400 focus:ring-2 focus:ring-indigo-100 text-slate-800 placeholder-slate-400 transition" placeholder="Enter your first name" required>
              </div>
            </div>
            <div>
              <label class="block mb-2 font-semibold text-slate-700" for="lastName">Last Name *</label>
              <div class="relative">
                <svg class="absolute left-4 top-1/2 -translate-y-1/2 text-slate-400 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
                </svg>
                <input type="text" id="lastName" name="lastName" class="w-full pl-12 pr-4 py-3 rounded-lg border-2 border-slate-200 bg-white/80 focus:border-indigo-400 focus:ring-2 focus:ring-indigo-100 text-slate-800 placeholder-slate-400 transition" placeholder="Enter your last name" required>
              </div>
            </div>
          </div>
          <div class="mt-5">
            <label class="block mb-2 font-semibold text-slate-700" for="email">Email Address *</label>
            <div class="relative">
              <svg class="absolute left-4 top-1/2 -translate-y-1/2 text-slate-400 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 12a4 4 0 10-8 0 4 4 0 008 0zm0 0v1.5a2.5 2.5 0 005 0V12a9 9 0 10-9 9m4.5-1.206a8.959 8.959 0 01-4.5 1.207"/>
              </svg>
              <input type="email" id="email" name="email" class="w-full pl-12 pr-4 py-3 rounded-lg border-2 border-slate-200 bg-white/80 focus:border-indigo-400 focus:ring-2 focus:ring-indigo-100 text-slate-800 placeholder-slate-400 transition" placeholder="Enter your email address" required>
            </div>
          </div>
          <div class="mt-5">
            <label class="block mb-2 font-semibold text-slate-700" for="phone">Phone Number *</label>
            <div class="relative">
              <svg class="absolute left-4 top-1/2 -translate-y-1/2 text-slate-400 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"/>
              </svg>
              <input type="tel" id="phone" name="phone" class="w-full pl-12 pr-4 py-3 rounded-lg border-2 border-slate-200 bg-white/80 focus:border-indigo-400 focus:ring-2 focus:ring-indigo-100 text-slate-800 placeholder-slate-400 transition" placeholder="+971 XX XXX XXXX" required>
            </div>
          </div>
          <div class="mt-5">
            <label class="block mb-2 font-semibold text-slate-700" for="company">Company Name</label>
            <div class="relative">
              <svg class="absolute left-4 top-1/2 -translate-y-1/2 text-slate-400 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
              </svg>
              <input type="text" id="company" name="company" class="w-full pl-12 pr-4 py-3 rounded-lg border-2 border-slate-200 bg-white/80 focus:border-indigo-400 focus:ring-2 focus:ring-indigo-100 text-slate-800 placeholder-slate-400 transition" placeholder="Enter your company name (optional)">
            </div>
          </div>
          <div class="mt-5">
            <label class="block mb-2 font-semibold text-slate-700" for="service">Service of Interest</label>
            <div class="relative">
              <svg class="absolute left-4 top-1/2 -translate-y-1/2 text-slate-400 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"/>
              </svg>
              <select id="service" name="service" class="w-full pl-12 pr-4 py-3 rounded-lg border-2 border-slate-200 bg-white/80 focus:border-indigo-400 focus:ring-2 focus:ring-indigo-100 text-slate-800 transition">
                <option value="">Select a service</option>
                <option value="custom-fabrication">Custom Fabrication</option>
                <option value="surveillance-solutions">Surveillance Solutions</option>
                <option value="both">Both Services</option>
                <option value="consultation">Consultation</option>
                <option value="other">Other</option>
              </select>
            </div>
          </div>
          <div class="mt-5">
            <label class="block mb-2 font-semibold text-slate-700" for="message">Message *</label>
            <div class="relative">
              <svg class="absolute left-4 top-5 text-slate-400 w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
              </svg>
              <textarea id="message" name="message" class="w-full pl-12 pr-4 py-3 rounded-lg border-2 border-slate-200 bg-white/80 focus:border-indigo-400 focus:ring-2 focus:ring-indigo-100 text-slate-800 placeholder-slate-400 transition min-h-[120px]" placeholder="Please describe your requirements, timeline, and any specific needs." required></textarea>
            </div>
          </div>
          <button type="submit" class="w-full mt-6 py-4 bg-gradient-to-r from-indigo-500 to-purple-600 text-white rounded-lg font-semibold flex items-center justify-center gap-2 shadow hover:scale-[1.01] hover:shadow-lg transition">
            <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"></path>
            </svg>
            Submit Inquiry
          </button>
        </form>
      </div>

      <!-- Contact Info -->
      <div class="flex flex-col gap-6">
        <!-- WhatsApp -->
        <div class="bg-white/90 backdrop-blur-lg rounded-2xl shadow p-6 flex flex-col gap-2 hover:shadow-lg transition">
          <div class="flex items-start gap-4 mb-2">
            <div class="w-12 h-12 rounded-xl flex items-center justify-center bg-gradient-to-br from-green-400 to-green-700 text-white">
              <svg width="24" height="24" viewBox="0 0 448 512" fill="currentColor">
                <path d="M380.9 97.1C339 55.1 283.2 32 223.9 32c-122.4 0-222 99.6-222 222c0 39.1 10.2 77.3 29.6 111L0 480l117.7-30.9c32.4 17.7 68.9 27 106.1 27h.1c122.3 0 224.1-99.6 224.1-222c0-59.3-25.2-115-67.1-157m-157 341.6c-33.2 0-65.7-8.9-94-25.7l-6.7-4l-69.8 18.3L72 359.2l-4.4-7c-18.5-29.4-28.2-63.3-28.2-98.2c0-101.7 82.8-184.5 184.6-184.5c49.3 0 95.6 19.2 130.4 54.1c34.8 34.9 56.2 81.2 56.1 130.5c0 101.8-84.9 184.6-186.6 184.6m101.2-138.2c-5.5-2.8-32.8-16.2-37.9-18c-5.1-1.9-8.8-2.8-12.5 2.8c-3.7 5.6-14.3 18-17.6 21.8c-3.2 3.7-6.5 4.2-12 1.4c-32.6-16.3-54-29.1-75.5-66c-5.7-9.8 5.7-9.1 16.3-30.3c1.8-3.7.9-6.9-.5-9.7c-1.4-2.8-12.5-30.1-17.1-41.2c-4.5-10.8-9.1-9.3-12.5-9.5c-3.2-.2-6.9-.2-10.6-.2c-3.7 0-9.7 1.4-14.8 6.9c-5.1 5.6-19.4 19-19.4 46.3c0 27.3 19.9 53.7 22.6 57.4c2.8 3.7 39.1 59.7 94.8 83.8c35.2 15.2 49 16.5 66.6 13.9c10.7-1.6 32.8-13.4 37.4-26.4c4.6-13 4.6-24.1 3.2-26.4c-1.3-2.5-5-3.9-10.5-6.6"/>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-slate-900 mb-1">WhatsApp Assistance</h3>
              <p class="text-slate-600">Contact our support team for immediate assistance with your inquiry.</p>
            </div>
          </div>
          <a href="https://wa.me/+971509162488" target="_blank" class="inline-flex items-center gap-2 text-green-700 hover:text-green-800 font-medium transition">
            Start WhatsApp Chat
            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/>
            </svg>
          </a>
        </div>

        <!-- Office Location -->
        <div class="bg-white/90 backdrop-blur-lg rounded-2xl shadow p-6 flex flex-col gap-2 hover:shadow-lg transition">
          <div class="flex items-start gap-4 mb-2">
            <div class="w-12 h-12 rounded-xl flex items-center justify-center bg-gradient-to-br from-indigo-400 to-purple-600 text-white">
              <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
              </svg>
            </div>
            <div>
              <h3 class="text-lg font-semibold text-slate-900 mb-1">Corporate Office</h3>
              <p class="text-slate-600">
                <strong>Lovosis Technology L.L.C U.A.E</strong><br />
                Baghlaf Building, Showroom No.5<br />
                Satellite Market, Naif Deira<br />
                Dubai, United Arab Emirates<br />
                <small>P.O.Box: 123421</small>
              </p>
              <div class="flex items-center gap-2 mt-2 text-indigo-600 text-sm">
                Office Hours: Sunday – Thursday, 9:00 AM – 6:00 PM
              </div>
            </div>
          </div>
        </div>

        <!-- Email -->
        <div class="bg-white/90 backdrop-blur-lg rounded-2xl shadow p-6 flex items-start gap-4 hover:shadow-lg transition border-l-4 border-purple-500">
          <div class="w-12 h-12 rounded-xl flex items-center justify-center bg-purple-500">
            <svg class="h-6 w-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"/></svg>
          </div>
          <div>
            <h3 class="text-lg font-semibold text-slate-900 mb-1">Email Correspondence</h3>
            <p class="text-slate-600 mb-2">For formal inquiries, please email us and our team will respond within one business day.</p>
            <a href="mailto:sales@lovosis.com" class="inline-flex items-center gap-2 text-purple-600 hover:text-purple-700 font-medium transition">
              sales@lovosis.com
              <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14"/></svg>
            </a>
          </div>
        </div>
      </div>
    </section>

    <!-- Map Section -->
    <div class="mt-16 overflow-hidden rounded-2xl shadow-2xl border border-slate-200">
      <iframe
        src="https://www.google.com/maps/embed?pb=!1m14!1m8!1m3!1d5252.514167547046!2d55.3174023!3d25.2649618!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x3e5f5ccf1b1322e9%3A0xe21d855b6fea81e7!2sBaghlaf%20Building%20-%2026B%20St%20-%20Deira%20-%20Dubai%20-%20United%20Arab%20Emirates!5e1!3m2!1sen!2ssa!4v1720859059038!5m2!1sen!2ssa"
