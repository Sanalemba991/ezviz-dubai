  <!-- JavaScript for form handling -->
  <script>
    document.addEventListener("DOMContentLoaded", function () {
      const form = document.getElementById("contact-form") as HTMLFormElement;
      const submitBtn = document.getElementById("submit-btn");
      const successMessage = document.getElementById("success-message");
      const errorMessage = document.getElementById("error-message");

      // Phone number formatting
      const phoneInput = document.getElementById("phone");
      phoneInput.addEventListener("input", function (e) {
        // Allow only numbers, +, -, space, and parentheses
        (this as HTMLInputElement).value = (
          this as HTMLInputElement
        ).value.replace(/[^0-9+\-\s\(\)]/g, "");
      });

      // Form submission handler
      form.addEventListener("submit", function (e) {
        e.preventDefault();

        // Hide previous messages
        successMessage.style.display = "none";
        errorMessage.style.display = "none";

        // Get form data
        const formData = new FormData(form);
        const data = Object.fromEntries(formData);

        // Validate required fields
        if (
          !data.firstName ||
          !data.lastName ||
          !data.email ||
          !data.phone ||
          !data.message
        ) {
          errorMessage.textContent = "Please fill in all required fields.";
          errorMessage.style.display = "block";
          return;
        }

        // Validate email format
        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
        if (!emailRegex.test(String(data.email))) {
          errorMessage.textContent = "Please enter a valid email address.";
          errorMessage.style.display = "block";
          return;
        }

        // Show loading state
        (submitBtn as HTMLButtonElement).disabled = true;
        submitBtn.innerHTML = `
          <span class="flex items-center justify-center gap-3">
            <svg class="animate-spin h-5 w-5" fill="none" viewBox="0 0 24 24">
              <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
              <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
            </svg>
            Sending...
          </span>
        `;

        // Create email content
        const subject = `New Contact Form Submission from ${data.firstName} ${data.lastName}`;
        const body = `
New contact form submission from Lovosis Technology website:

Name: ${data.firstName} ${data.lastName}
Email: ${data.email}
Phone: ${data.phone}
${data.company ? `Company: ${data.company}` : ""}
${data.service ? `Service Interest: ${data.service}` : ""}

Message:
${data.message}

---
This message was sent from the Lovosis Technology contact form.
        `.trim();

        // Create mailto link
        const mailtoLink = `mailto:sales@lovosis.com?subject=${encodeURIComponent(subject)}&body=${encodeURIComponent(body)}`;

        // Open email client
        window.location.href = mailtoLink;

        // Show success message after a short delay
        setTimeout(() => {
          successMessage.style.display = "block";
          (form as HTMLFormElement).reset();

          // Reset button
          (submitBtn as HTMLButtonElement).disabled = false;
          submitBtn.innerHTML = `
            <span class="flex items-center justify-center gap-3">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 19l9 2-9-18-9 18 9-2zm0 0v-8"/>
              </svg>
              Send Message
            </span>
          `;

          // Scroll to success message
          successMessage.scrollIntoView({
            behavior: "smooth",
            block: "center",
          });
        }, 1000);
      });

      // Add form validation feedback
      const inputs = form.querySelectorAll(
        "input[required], textarea[required], select[required]"
      );
      inputs.forEach((input) => {
        input.addEventListener("blur", function () {
          if (this.value.trim() === "") {
            this.style.borderColor = "#ef4444";
          } else {
            this.style.borderColor = "#10b981";
          }
        });

        input.addEventListener("input", function () {
          if (
            this.style.borderColor === "rgb(239, 68, 68)" &&
            this.value.trim() !== ""
          ) {
            this.style.borderColor = "#10b981";
          }
        });
      });
    });
  </script>
