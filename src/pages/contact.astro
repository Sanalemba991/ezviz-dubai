        <div class="animate-bounce">
          <svg class="w-8 h-8 text-white/70 mx-auto" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
          </svg>
        </div>
        <p class="text-white/70 text-sm mt-2">Scroll to explore</p>
      </div>
    </div>
  </section>

  <!-- Main Content -->
  <div class="max-w-6xl mx-auto px-4 py-16">
    <section class="grid grid-cols-1 lg:grid-cols-[1fr_400px] gap-10">
      <!-- Contact Form -->
      <div class="professional-card bg-white/95 backdrop-blur-lg rounded-3xl shadow-2xl p-8 relative overflow-hidden" id="contact-form">
        <div class="absolute top-0 left-0 right-0 h-2 bg-gradient-to-r from-indigo-500 via-purple-500 to-pink-500 rounded-t-3xl"></div>
        
        <div class="mb-8">
          <h2 class="text-3xl font-bold text-slate-800 mb-3">Formal Inquiry Form</h2>
          <p class="text-slate-600 text-lg">Kindly provide your details and a member of our team will contact you promptly. Fields marked with an asterisk (*) are required.</p>
